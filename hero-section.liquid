<!-- Shopify Hero Section Template -->
<section class="relative bg-gradient-to-b from-[#e8f7f6] to-white overflow-hidden py-8">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-2/5 mb-8 md:mb-0 text-center md:text-left z-10">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 leading-tight mb-2">
          {{ section.settings.heading }}
          {% if section.settings.subheading != blank %}
            <span class="block text-gray-800 font-medium mt-1">{{ section.settings.subheading }}</span>
          {% endif %}
        </h1>
        <p class="text-gray-500 text-sm mb-6 max-w-lg mx-auto md:mx-0">
          {{ section.settings.description }}
        </p>
        <div class="flex space-x-3 justify-center md:justify-start">
          {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="bg-[#0ab2a8] text-white py-2 px-4 rounded-md text-sm font-medium">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
          {% if section.settings.secondary_button_link != blank %}
            <a href="{{ section.settings.secondary_button_link }}" class="border border-[#0ab2a8] text-[#0ab2a8] hover:bg-[#0ab2a8]/5 py-2 px-4 rounded-md text-sm font-medium">
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
      <div class="md:w-3/5 flex justify-center">
        <div class="relative">
          {% if section.settings.image != blank %}
            <img 
              src="{{ section.settings.image | img_url: 'large' }}" 
              alt="{{ section.settings.image.alt | default: shop.name }}"
              class="rounded-lg w-full max-w-2xl object-contain"
            />
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Orthbrots para orthopédicos"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "ortopédicos"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Los productos ortopédicos de alta calidad mejoran tu movilidad y comodidad. Diseñados para personas que buscan mejorar su calidad de vida."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Añadir Ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Lista de Espera"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}