<div class="py-10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row -mx-4">
      <!-- Product Images -->
      <div class="md:w-1/2 px-4 mb-8 md:mb-0">
        <div class="sticky top-24">
          <div class="relative bg-white rounded-lg overflow-hidden shadow-md mb-4">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | img_url: '800x' }}" 
                alt="{{ product.title }}" 
                class="w-full h-auto"
                id="main-product-image"
              >
            {% else %}
              <div class="bg-gray-200 aspect-square flex items-center justify-center">
                <i class="fa-solid fa-image text-gray-400 text-5xl"></i>
              </div>
            {% endif %}
          </div>
          
          {% if product.images.size > 1 %}
            <div class="grid grid-cols-4 gap-2">
              {% for image in product.images %}
                <a 
                  href="javascript:void(0)" 
                  onclick="changeMainImage('{{ image | img_url: '800x' }}', {{ forloop.index }})" 
                  class="product-thumbnail border border-gray-200 hover:border-teal rounded-md overflow-hidden {% if forloop.first %}border-teal{% endif %}"
                  data-index="{{ forloop.index }}"
                >
                  <img 
                    src="{{ image | img_url: '100x100', crop: 'center' }}" 
                    alt="{{ product.title }} - Image {{ forloop.index }}" 
                    class="w-full h-auto"
                  >
                </a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
      
      <!-- Product Details -->
      <div class="md:w-1/2 px-4">
        <!-- Breadcrumbs -->
        <div class="mb-6 text-sm">
          <a href="/" class="text-gray-500 hover:text-teal">Home</a>
          <span class="mx-2 text-gray-400">/</span>
          <a href="/collections/{{ product.collections.first.handle }}" class="text-gray-500 hover:text-teal">{{ product.collections.first.title }}</a>
          <span class="mx-2 text-gray-400">/</span>
          <span class="text-gray-700">{{ product.title }}</span>
        </div>
        
        <!-- Product Info -->
        <h1 class="text-3xl font-bold mb-2">{{ product.title }}</h1>
        
        <div class="mb-4">
          <span class="text-2xl font-semibold text-gray-900">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="ml-2 text-lg text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
            <span class="ml-2 text-sm px-2 py-1 bg-red-100 text-red-700 rounded">{{ 'products.product.on_sale' | t }}</span>
          {% endif %}
        </div>
        
        {% if product.description != blank %}
          <div class="prose prose-sm mb-6">
            {{ product.description }}
          </div>
        {% endif %}
        
        <!-- Product Variants -->
        {% unless product.has_only_default_variant %}
          <div class="mb-6">
            {% for option in product.options_with_values %}
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  {{ option.name }}
                </label>
                
                <div class="flex flex-wrap gap-2">
                  {% for value in option.values %}
                    <label class="option-value">
                      <input 
                        type="radio" 
                        name="{{ option.name | handleize }}" 
                        value="{{ value | escape }}" 
                        class="sr-only" 
                        {% if option.selected_value == value %}checked{% endif %}
                      >
                      <span class="px-3 py-2 border border-gray-300 rounded-md cursor-pointer hover:border-teal text-sm {% if option.selected_value == value %}border-teal bg-teal-light{% endif %}">
                        {{ value }}
                      </span>
                    </label>
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endunless %}
        
        <!-- Add to Cart Form -->
        <form action="/cart/add" method="post" id="product-form" class="mb-8">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          
          <div class="flex items-center mb-4">
            <div class="relative w-32 mr-4">
              <label for="Quantity" class="sr-only">{{ 'products.product.quantity' | t }}</label>
              <input 
                type="number" 
                id="Quantity" 
                name="quantity" 
                value="1" 
                min="1" 
                class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent"
              >
            </div>
            
            <button 
              type="submit" 
              name="add" 
              class="flex-grow bg-teal text-white font-medium py-3 px-6 rounded-md hover:bg-teal-dark transition-colors flex items-center justify-center {% unless product.available %}opacity-50 cursor-not-allowed{% endunless %}"
              {% unless product.available %}disabled{% endunless %}
            >
              {% if product.available %}
                <span>{{ 'products.product.add_to_cart' | t }}</span>
              {% else %}
                <span>{{ 'products.product.sold_out' | t }}</span>
              {% endif %}
            </button>
          </div>
        </form>
        
        <!-- Product Meta -->
        <div class="border-t border-gray-200 pt-4">
          {% if product.vendor %}
            <p class="mb-2 text-sm">
              <span class="text-gray-600">{{ 'products.product.vendor' | t }}:</span>
              <span class="text-gray-900">{{ product.vendor }}</span>
            </p>
          {% endif %}
          
          {% if product.type %}
            <p class="mb-2 text-sm">
              <span class="text-gray-600">Type:</span>
              <span class="text-gray-900">{{ product.type }}</span>
            </p>
          {% endif %}
          
          {% if product.tags.size > 0 %}
            <p class="mb-2 text-sm">
              <span class="text-gray-600">Tags:</span>
              <span class="text-gray-900">
                {% for tag in product.tags %}
                  {{ tag }}{% unless forloop.last %}, {% endunless %}
                {% endfor %}
              </span>
            </p>
          {% endif %}
          
          {% if section.settings.show_share_buttons %}
            <div class="mt-4 pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-600 mb-2">Share:</p>
              <div class="flex space-x-4">
                <a href="https://facebook.com/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank" rel="noopener" aria-label="Share on Facebook" class="text-gray-500 hover:text-teal">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://twitter.com/intent/tweet?text={{ product.title | url_encode }}&url={{ shop.url }}{{ product.url }}" target="_blank" rel="noopener" aria-label="Share on Twitter" class="text-gray-500 hover:text-teal">
                  <i class="fab fa-twitter"></i>
                </a>
                <a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&media={{ product.featured_image | img_url: 'original' }}&description={{ product.title | url_encode }}" target="_blank" rel="noopener" aria-label="Pin on Pinterest" class="text-gray-500 hover:text-teal">
                  <i class="fab fa-pinterest-p"></i>
                </a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Additional Information Tabs -->
    <div class="mt-16" x-data="{ activeTab: 'description' }">
      <!-- Tab Headings -->
      <div class="border-b border-gray-200">
        <div class="flex flex-wrap -mb-px">
          <button 
            @click="activeTab = 'description'" 
            :class="{ 'border-teal text-teal': activeTab === 'description', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': activeTab !== 'description' }"
            class="py-3 px-6 font-medium border-b-2 transition-colors duration-200 mr-4"
          >
            Description
          </button>
          
          <button 
            @click="activeTab = 'specifications'" 
            :class="{ 'border-teal text-teal': activeTab === 'specifications', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': activeTab !== 'specifications' }"
            class="py-3 px-6 font-medium border-b-2 transition-colors duration-200 mr-4"
          >
            Specifications
          </button>
          
          <button 
            @click="activeTab = 'reviews'" 
            :class="{ 'border-teal text-teal': activeTab === 'reviews', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': activeTab !== 'reviews' }"
            class="py-3 px-6 font-medium border-b-2 transition-colors duration-200"
          >
            Reviews
          </button>
        </div>
      </div>
      
      <!-- Tab Content -->
      <div class="py-6">
        <!-- Description Tab -->
        <div x-show="activeTab === 'description'" class="prose max-w-none">
          {{ product.description }}
          
          {% if section.settings.show_extended_description %}
            <div class="mt-6">
              {{ section.settings.extended_description }}
            </div>
          {% endif %}
        </div>
        
        <!-- Specifications Tab -->
        <div x-show="activeTab === 'specifications'" class="prose max-w-none">
          {% if section.settings.specifications != blank %}
            {{ section.settings.specifications }}
          {% else %}
            <table class="min-w-full border-collapse">
              <tbody>
                {% for metafield in product.metafields.specifications %}
                  <tr class="border-b border-gray-200">
                    <td class="py-3 px-4 text-gray-700 font-medium bg-gray-50">{{ metafield.first }}</td>
                    <td class="py-3 px-4 text-gray-600">{{ metafield.last }}</td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="2" class="py-3 px-4 text-gray-500 italic">No specifications available.</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          {% endif %}
        </div>
        
        <!-- Reviews Tab -->
        <div x-show="activeTab === 'reviews'" class="prose max-w-none">
          {% if section.settings.reviews_content != blank %}
            {{ section.settings.reviews_content }}
          {% else %}
            <p class="text-gray-500 italic">No reviews yet for this product.</p>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Related Products -->
    {% if section.settings.show_related_products %}
      <div class="mt-16">
        <h2 class="section-title">{{ section.settings.related_products_title }}</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
          {% assign related_collection = section.settings.related_collection | default: product.collections.first %}
          {% assign related_products = related_collection.products | where: "id", "!=" , product.id | limit: 4 %}
          
          {% for related_product in related_products %}
            <div class="product-card relative group overflow-hidden rounded-lg bg-white shadow hover:shadow-md transition-shadow">
              <!-- Product Image -->
              <a href="{{ related_product.url }}">
                <div class="aspect-square overflow-hidden">
                  {% if related_product.featured_image %}
                    <img 
                      src="{{ related_product.featured_image | img_url: '300x300', crop: 'center' }}" 
                      alt="{{ related_product.title }}" 
                      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    >
                  {% else %}
                    <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                      <i class="fa-solid fa-image text-gray-400 text-3xl"></i>
                    </div>
                  {% endif %}
                </div>
              </a>
              
              <!-- Product Details -->
              <div class="p-3">
                <a href="{{ related_product.url }}" class="block">
                  <h3 class="text-sm font-medium text-gray-800 mb-1 truncate">{{ related_product.title }}</h3>
                </a>
                <div class="flex justify-between items-center">
                  <span class="text-sm font-semibold text-gray-900">
                    {{ related_product.price | money }}
                  </span>
                  
                  <!-- Add to Cart Button (+ symbol) -->
                  <button 
                    class="add-to-cart"
                    onclick="addToCart('{{ related_product.variants.first.id }}', 1, event)"
                  >
                    <i class="fa-solid fa-plus text-xs"></i>
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function changeMainImage(imageUrl, index) {
    // Update main image
    document.getElementById('main-product-image').src = imageUrl;
    
    // Update active thumbnail
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    thumbnails.forEach(thumb => {
      if (parseInt(thumb.dataset.index) === index) {
        thumb.classList.add('border-teal');
      } else {
        thumb.classList.remove('border-teal');
      }
    });
  }
  
  document.addEventListener('DOMContentLoaded', function() {
    // Handle variant selection
    const variantRadios = document.querySelectorAll('input[type="radio"][name^="option"]');
    variantRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        // This is where you would typically update the selected variant
        // For a complete implementation, you would need to match the selected options
        // to the available variants and update the price, availability, etc.
      });
    });
  });
</script>

{% schema %}
{
  "name": "Product Template",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show social sharing buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_extended_description",
      "label": "Show extended description",
      "default": false
    },
    {
      "type": "richtext",
      "id": "extended_description",
      "label": "Extended description",
      "info": "Additional description content to display"
    },
    {
      "type": "richtext",
      "id": "specifications",
      "label": "Specifications content",
      "info": "Content for the specifications tab"
    },
    {
      "type": "richtext",
      "id": "reviews_content",
      "label": "Reviews content",
      "info": "Content for the reviews tab"
    },
    {
      "type": "checkbox",
      "id": "show_related_products",
      "label": "Show related products",
      "default": true
    },
    {
      "type": "text",
      "id": "related_products_title",
      "label": "Related products title",
      "default": "You may also like"
    },
    {
      "type": "collection",
      "id": "related_collection",
      "label": "Related products collection",
      "info": "If not specified, will use the first collection the product belongs to"
    }
  ]
}
{% endschema %}