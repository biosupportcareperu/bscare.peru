<!-- Shopify Header Template -->
<!-- Top Bar -->
<div class="bg-[#0ab2a8] text-white py-1.5 px-4 text-xs flex justify-end space-x-6">
  <a href="#" class="hover:underline">Community Professionals</a>
  <a href="#" class="hover:underline">Live Customer Service</a>
  <div class="flex space-x-3">
    {% if shop.customer_accounts_enabled %}
      {% if customer %}
        <a href="{{ routes.account_url }}" class="hover:text-opacity-80">
          <i class="fas fa-user"></i>
        </a>
      {% else %}
        <a href="{{ routes.account_login_url }}" class="hover:text-opacity-80">
          <i class="fas fa-user"></i>
        </a>
      {% endif %}
    {% endif %}
    <a href="{{ routes.cart_url }}" class="hover:text-opacity-80">
      <i class="fas fa-shopping-bag"></i>
      {% if cart.item_count > 0 %}
        <span class="cart-count">{{ cart.item_count }}</span>
      {% endif %}
    </a>
  </div>
</div>

<!-- Main Navigation -->
<header class="sticky top-0 z-50 bg-white border-b border-gray-100">
  <div class="container mx-auto px-6 py-3 flex justify-between items-center">
    <div class="flex items-center">
      {% if section.settings.logo != blank %}
        <a href="{{ routes.root_url }}">
          <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-8">
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="text-gray-800 text-xl font-semibold">{{ shop.name }}</a>
      {% endif %}
    </div>
    
    <div class="hidden md:flex space-x-8 text-gray-600 text-sm font-medium">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="hover:text-[#0ab2a8]">
          {{ link.title }}
        </a>
      {% endfor %}
    </div>
    
    <div class="flex items-center space-x-4">
      <div class="relative">
        <form action="{{ routes.search_url }}" method="get">
          <input
            type="text"
            name="q"
            placeholder="Buscar"
            class="bg-gray-100 rounded-full py-1.5 px-4 pr-8 text-sm focus:outline-none focus:ring-1 focus:ring-[#0ab2a8] w-40"
          />
          <button type="submit" class="absolute right-3 top-2.5">
            <i class="fas fa-search text-gray-400 text-xs"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</header>