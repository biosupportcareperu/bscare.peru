<div class="bg-teal-light py-8 md:py-12">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ collection.title }}</h1>
      
      {% if collection.description != blank and section.settings.show_description_in_header %}
        <div class="max-w-2xl mx-auto text-gray-600 mb-6">
          {{ collection.description }}
        </div>
      {% endif %}
      
      {% if section.settings.show_breadcrumbs %}
        <div class="flex justify-center text-sm text-gray-500 mb-4">
          <a href="/" class="hover:text-teal">Home</a>
          <span class="mx-2">/</span>
          <span class="text-gray-700">{{ collection.title }}</span>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description_in_header",
      "label": "Show description in header",
      "default": false,
      "info": "If enabled, description will appear in the header instead of below products"
    }
  ],
  "presets": [
    {
      "name": "Collection Header",
      "category": "Collection"
    }
  ]
}
{% endschema %}