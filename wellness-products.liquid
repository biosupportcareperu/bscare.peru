          </div>
        </div>
        <h3 class="text-center text-sm font-medium text-gray-800">
          {{ section.settings.category_4_title | default: 'Knee Braces' }}
        </h3>
      </a>
      
      <!-- Category 5 -->
      <a href="{{ section.settings.category_5_url | default: '/collections/wrist-support' }}" class="group">
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-3 flex items-center justify-center relative">
          {% if section.settings.category_5_image %}
