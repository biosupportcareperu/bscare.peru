<div class="bg-white py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
        {{ section.settings.heading | default: 'Wellness Products' }}
      </h2>
      
      {% if section.settings.subheading != blank %}
        <p class="mt-3 max-w-2xl mx-auto text-gray-500">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
      <!-- Category 1 -->
      <a href="{{ section.settings.category_1_url | default: '/collections/massage' }}" class="group">
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-3 flex items-center justify-center relative">
          {% if section.settings.category_1_image %}
            <img 
              src="{{ section.settings.category_1_image | img_url: '250x250', crop: 'center' }}" 
              alt="{{ section.settings.category_1_title | escape }}" 
              class="w-full h-full object-cover"
            >
          {% else %}
            <div class="w-20 h-20 bg-blue-400 rounded-full"></div>
          {% endif %}
          <div class="absolute bottom-0 right-0 w-8 h-8 bg-teal rounded-full m-2 flex items-center justify-center text-white opacity-90 group-hover:opacity-100 transition-opacity">
            <i class="fa-solid fa-plus text-xs"></i>
          </div>
        </div>
        <h3 class="text-center text-sm font-medium text-gray-800">
          {{ section.settings.category_1_title | default: 'Massage Aids' }}
        </h3>
      </a>
      
      <!-- Category 2 -->
      <a href="{{ section.settings.category_2_url | default: '/collections/ankle-support' }}" class="group">
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-3 flex items-center justify-center relative">
          {% if section.settings.category_2_image %}
