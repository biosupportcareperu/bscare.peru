              src="{{ section.settings.category_6_image | img_url: '250x250', crop: 'center' }}" 
              alt="{{ section.settings.category_6_title | escape }}" 
              class="w-full h-full object-cover"
            >
          {% else %}
            <div class="w-20 h-20 bg-green-500 rounded-full"></div>
          {% endif %}
          <div class="absolute bottom-0 right-0 w-8 h-8 bg-teal rounded-full m-2 flex items-center justify-center text-white opacity-90 group-hover:opacity-100 transition-opacity">
            <i class="fa-solid fa-plus text-xs"></i>
          </div>
        </div>
        <h3 class="text-center text-sm font-medium text-gray-800">
          {{ section.settings.category_6_title | default: 'Therapy Balls' }}
        </h3>
      </a>
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="text-center mt-8">
        <a href="{{ section.settings.view_all_url | default: '/collections/all' }}" class="inline-block text-teal hover:text-teal-dark font-medium">
          {{ section.settings.view_all_text | default: 'View All Wellness Products' }}
          <i class="fa-solid fa-arrow-right ml-1 text-xs"></i>
        </a>
      </div>
    {% endif %}
  </div>
</div>

