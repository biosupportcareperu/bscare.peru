<div class="bg-white py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
        {{ section.settings.heading | default: 'Featured Products' }}
      </h2>
      
      {% if section.settings.subheading != blank %}
        <p class="mt-3 max-w-2xl mx-auto text-gray-500">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Featured Product 1 -->
      <div class="product-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <div class="aspect-square relative overflow-hidden">
          <img 
            src="{{ 'knee-brace.png' | asset_url }}" 
            alt="Advanced Knee Brace Support"
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
          >
          
          {% if section.settings.show_badges %}
            <div class="absolute top-2 left-2">
              <span class="inline-block bg-teal text-white text-xs px-2 py-1 rounded">Best Seller</span>
            </div>
          {% endif %}
        </div>
        
        <div class="p-4">
          <h3 class="text-lg font-medium text-gray-900 mb-1">Advanced Knee Brace Support</h3>
          
          <div class="flex items-center mb-2">
            <div class="text-yellow-400 flex">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star-half-alt"></i>
            </div>
            <span class="text-xs text-gray-500 ml-1">(42 reviews)</span>
          </div>
          
          <div class="flex justify-between items-center">
            <div>
              <span class="text-lg font-semibold text-gray-900">${{ 59.99 | money_without_currency }}</span>
              {% if section.settings.show_compare_at_price %}
                <span class="text-sm text-gray-500 line-through ml-2">${{ 75.99 | money_without_currency }}</span>
              {% endif %}
            </div>
            
            <!-- Add to Cart Button (+ symbol) -->
            <button class="add-to-cart">
              <i class="fa-solid fa-plus text-xs"></i>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Featured Product 2 -->
      <div class="product-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <div class="aspect-square relative overflow-hidden">
          <img 
            src="{{ 'ankle-support.png' | asset_url }}" 
            alt="Stabilizing Ankle Support"
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
          >
        </div>
        
        <div class="p-4">
          <h3 class="text-lg font-medium text-gray-900 mb-1">Stabilizing Ankle Support</h3>
          
          <div class="flex items-center mb-2">
            <div class="text-yellow-400 flex">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
            </div>
            <span class="text-xs text-gray-500 ml-1">(38 reviews)</span>
          </div>
          
          <div class="flex justify-between items-center">
            <div>
              <span class="text-lg font-semibold text-gray-900">${{ 42.99 | money_without_currency }}</span>
              {% if section.settings.show_compare_at_price %}
                <span class="text-sm text-gray-500 line-through ml-2">${{ 54.99 | money_without_currency }}</span>
              {% endif %}
            </div>
            
            <!-- Add to Cart Button (+ symbol) -->
            <button class="add-to-cart">
              <i class="fa-solid fa-plus text-xs"></i>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Featured Product 3 -->
      <div class="product-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <div class="aspect-square relative overflow-hidden">
          <img 
            src="{{ 'back-support.png' | asset_url }}" 
            alt="Ergonomic Back Support Belt"
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
          >
          
          {% if section.settings.show_badges %}
            <div class="absolute top-2 left-2">
              <span class="inline-block bg-red-500 text-white text-xs px-2 py-1 rounded">Sale</span>
            </div>
          {% endif %}
        </div>
        
        <div class="p-4">
          <h3 class="text-lg font-medium text-gray-900 mb-1">Ergonomic Back Support Belt</h3>
          
          <div class="flex items-center mb-2">
            <div class="text-yellow-400 flex">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
            <span class="text-xs text-gray-500 ml-1">(51 reviews)</span>
          </div>
          
          <div class="flex justify-between items-center">
            <div>
              <span class="text-lg font-semibold text-gray-900">${{ 65.99 | money_without_currency }}</span>
              {% if section.settings.show_compare_at_price %}
                <span class="text-sm text-gray-500 line-through ml-2">${{ 79.99 | money_without_currency }}</span>
              {% endif %}
            </div>
            
            <!-- Add to Cart Button (+ symbol) -->
            <button class="add-to-cart">
              <i class="fa-solid fa-plus text-xs"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    
    {% if section.settings.show_view_all_button %}
      <div class="text-center mt-10">
        <a href="{{ section.settings.view_all_url | default: '/collections/all' }}" class="btn-primary">
          {{ section.settings.view_all_text | default: 'View All Products' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .add-to-cart {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #0ab2a8; /* teal color */
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }
  
  .add-to-cart:hover {
    background-color: #089089; /* darker teal */
    transform: scale(1.1);
  }
  
  .btn-primary {
    @apply bg-teal text-white py-3 px-6 rounded-md hover:bg-teal-dark transition-colors focus:outline-none focus:ring-2 focus:ring-teal focus:ring-offset-2 inline-block;
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular orthopedic support products"
    },
    {
      "type": "checkbox",
      "id": "show_compare_at_price",
      "label": "Show compare at price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all_button",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "View all URL",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Products"
    }
  ]
}
{% endschema %}