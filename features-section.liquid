<!-- Shopify Features/Benefits Section Template -->
<section class="py-10 bg-white">
  <div class="container mx-auto px-6">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="text-gray-500 mt-2 max-w-2xl mx-auto">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ section.blocks.size }} gap-8">
      {% for block in section.blocks %}
        <div class="bg-gray-50 p-6 rounded-lg text-center hover:shadow-md transition-shadow" {{ block.shopify_attributes }}>
          {% if block.settings.icon_emoji != blank %}
            <div class="text-4xl mb-4 text-[#0ab2a8]">{{ block.settings.icon_emoji }}</div>
          {% endif %}
          
          {% if block.settings.icon != blank %}
            <div class="flex justify-center mb-4">
              <img src="{{ block.settings.icon | img_url: 'small' }}" alt="{{ block.settings.title }}" class="h-12 w-12">
            </div>
          {% endif %}
          
          <h3 class="text-xl font-semibold text-gray-800 mb-2">{{ block.settings.title }}</h3>
          <p class="text-gray-500 text-sm">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

