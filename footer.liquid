<!-- Shopify Footer Template -->
<footer class="bg-gray-50 pt-10 pb-6">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <div class="mb-4">
          {% if section.settings.footer_logo != blank %}
            <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-10 mb-3">
          {% else %}
            <h3 class="text-xl font-semibold text-gray-800 mb-3">{{ shop.name }}</h3>
          {% endif %}
          
          <p class="text-sm text-gray-500">
            {{ section.settings.company_description }}
          </p>
        </div>
        
        <div class="flex space-x-4 mt-4">
          {% if section.settings.facebook_link != blank %}
            <a href="{{ section.settings.facebook_link }}" class="text-gray-400 hover:text-[#0ab2a8]">
              <i class="fab fa-facebook-f"></i>
            </a>
          {% endif %}
          
          {% if section.settings.instagram_link != blank %}
            <a href="{{ section.settings.instagram_link }}" class="text-gray-400 hover:text-[#0ab2a8]">
              <i class="fab fa-instagram"></i>
            </a>
          {% endif %}
          
          {% if section.settings.twitter_link != blank %}
            <a href="{{ section.settings.twitter_link }}" class="text-gray-400 hover:text-[#0ab2a8]">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-800 uppercase mb-4">{{ section.settings.links_heading_1 }}</h3>
        <ul class="space-y-2">
          {% for link in linklists[section.settings.footer_menu_1].links %}
            <li><a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-[#0ab2a8]">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div>
        <h3 class="text-sm font-semibold text-gray-800 uppercase mb-4">{{ section.settings.links_heading_2 }}</h3>
        <ul class="space-y-2">
          {% for link in linklists[section.settings.footer_menu_2].links %}
            <li><a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-[#0ab2a8]">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Newsletter -->
      <div>
        <h3 class="text-sm font-semibold text-gray-800 uppercase mb-4">{{ section.settings.newsletter_heading }}</h3>
        <p class="text-sm text-gray-500 mb-3">{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer', id: 'footer-newsletter' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="flex">
            <input 
              type="email"
              name="contact[email]"
              placeholder="Email"
              required
              class="px-3 py-2 text-sm bg-white border border-gray-200 rounded-l-md focus:outline-none focus:ring-1 focus:ring-[#0ab2a8] flex-1"
            >
            <button 
              type="submit" 
              class="bg-[#0ab2a8] text-white px-3 py-2 rounded-r-md text-sm"
            >
              {{ section.settings.newsletter_button }}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
    
    <div class="border-t border-gray-200 pt-6 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm text-gray-500 mb-4 md:mb-0">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
      
      <div class="flex space-x-4 text-sm text-gray-500">
        {% for link in linklists[section.settings.footer_legal_menu].links %}
          <a href="{{ link.url }}" class="hover:text-[#0ab2a8]">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Productos ortopédicos de alta calidad para mejorar tu movilidad y comodidad. Diseñados para personas que buscan mejorar su calidad de vida."
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook Link"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram Link"
    },
    {
      "type": "url",
      "id": "twitter_link",
      "label": "Twitter Link"
    },
    {
      "type": "text",
      "id": "links_heading_1",
      "label": "Links Heading 1",
      "default": "Información"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "First menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "links_heading_2",
      "label": "Links Heading 2",
      "default": "Productos"
    },
    {
      "type": "link_list",
      "id": "footer_menu_2",
      "label": "Second menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Suscríbete para recibir actualizaciones sobre nuevos productos y ofertas especiales."
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Newsletter Button Text",
      "default": "Suscribir"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Todos los derechos reservados."
    },
    {
      "type": "link_list",
      "id": "footer_legal_menu",
      "label": "Legal Links Menu",
      "default": "footer"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}